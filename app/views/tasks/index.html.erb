<h1>Todoapp</h1>

<% @tasks.each do |task| %>
  <li>
    <%= link_to "#{task.title}", tasks_show_id_path(task) %><br>
    <%= link_to "詳細", tasks_show_id_path(task) %>
    <%# 上２つのリンクはどちらも詳細ページへリンクするようにしている %>
    <%= link_to "編集", "/tasks/edit/#{task.id}" %>
    <%= link_to "削除", "/tasks/#{task.id}", data: { turbo_method: :delete } %>
  </li>
<% end %>




